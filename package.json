{
  "name": "buff-buddy-monorepo",
  "private": true,
  "workspaces": [
    "buff-buddy-api",
    "buff-buddy-front"
  ],
  "scripts": {
    "build": "npm run build --workspace=buff-buddy-api && npm run build --workspace=buff-buddy-front",
    "dev:api": "npm run dev --workspace=buff-buddy-api",
    "dev:front": "npm run dev --workspace=buff-buddy-front",
    "studio": "npm run studio --workspace=buff-buddy-api",
    "test": "npm test --workspace=buff-buddy-api",
    "migrate": "npm run migrate --workspace=buff-buddy-api",
    "gen": "npm run gen --workspace=buff-buddy-api"
  }
}
