{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "..",
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "prisma/**/*", "../shared/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts", "jest.config.ts"]
}
