  chest

  // Shoulders
  front_delts
  side_delts
  rear_delts

  // Back
  lats
  traps
  rhomboids
  lower_back

  // Arms
  biceps
  triceps
  forearms

  // Core
  abs
  obliques

  // Legs
  quads
  hamstrings
  glutes
  calves
  hip_flexors
  adductors
  abductors

  // Stabilizers
  rotator_cuff
  serratus_anterior
}

