generator client {
  provider = "prisma-client-js"
  output   = "generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MuscleGroup {
  CHEST
  SHOULDERS
  BACK
  ARMS
  CORE
  LEGS
  STABILIZERS
}

